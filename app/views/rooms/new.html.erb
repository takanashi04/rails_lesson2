<h1>施設登録</h1>
<%= form_with model:@room do |f| %>
  <div>
    <%= f.label :name, "施設名" %><br />
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :content, "施設詳細" %><br />
    <%= f.text_area :content %>
  </div>

  <div>
    <%= f.label :price, "価格" %><br />
    <%= f.number_field :price %>
  </div>

  <div>
    <%= f.label :address, "住所" %><br />
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :avatar_path, "画像アップロード" %><br />
    <%= f.file_field :avatar_path, id: :user_avatar_path %>
  </div>

  <div>
    <%= f.submit "登録完了する" %>
    <%= link_to "キャンセル", root_path %>
  </div>
<% end %>
